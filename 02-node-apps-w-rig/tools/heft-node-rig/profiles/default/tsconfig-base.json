{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../../../dist",
    "rootDir": "../../../../../src",

    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,

    "types": [],

    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"]
  },
  "include": [
    "../../../../../src/**/*.ts",
    "../../../../../src/**/*.tsx"
  ]
}
