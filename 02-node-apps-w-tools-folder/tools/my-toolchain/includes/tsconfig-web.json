{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../../dist",
    "rootDirs": ["../../../src/"],

    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["heft-jest", "node", "jest"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017"]
  },
  "include": [
    "../../../src/**/*.ts",
  ],
  "exclude": [
    "../../../node_modules",
    "../../../dist"
  ]
}
